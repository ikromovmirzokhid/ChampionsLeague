<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/groupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Group A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:id="@+id/group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TableRow android:background="@drawable/table_border">

                    <TextView android:layout_weight="1" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="P"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="GD"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Pts"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_weight="20"
                        android:orientation="horizontal"
                        android:weightSum="15">

                        <ImageView
                            android:id="@+id/firstClubLogo"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp" />

                        <TextView
                            android:id="@+id/firstClub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="14"
                            android:gravity="start"
                            android:maxWidth="14dp"
                            android:text="Barcelona"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/firstClubP"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/firstClubGD"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="+0"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/firstClubPts"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="2"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_weight="20"
                        android:orientation="horizontal"
                        android:weightSum="15">

                        <ImageView
                            android:id="@+id/secondClubLogo"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="15dp" />

                        <TextView
                            android:id="@+id/secondClub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="14"
                            android:gravity="start"
                            android:maxWidth="14dp"
                            android:text="Barcelona"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/secondClubP"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/secondClubGD"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="+0"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/secondClubPts"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="3"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_weight="20"
                        android:orientation="horizontal"
                        android:weightSum="15">

                        <ImageView
                            android:id="@+id/thirdClubLogo"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp" />

                        <TextView
                            android:id="@+id/thirdClub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="14"
                            android:gravity="start"
                            android:maxWidth="14dp"
                            android:text="Barcelona"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/thirdClubP"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/thirdClubGD"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="+0"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/thirdClubPts"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="4"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_weight="20"
                        android:orientation="horizontal"
                        android:weightSum="15">

                        <ImageView
                            android:id="@+id/fourthClubLogo"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="15dp" />

                        <TextView
                            android:id="@+id/fourthClub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="14"
                            android:gravity="start"
                            android:maxWidth="14dp"
                            android:text="Barcelona"
                            android:textSize="19sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fourthClubP"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/fourthClubGD"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="+0"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/fourthClubPts"
                        android:layout_weight="2"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>